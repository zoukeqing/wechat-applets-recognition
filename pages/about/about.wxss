/* pages/about/about.wxss */
page{
  background-color: white;
}
.about-main{
  height: 100%;
  padding: 20rpx 50rpx;
}
.about-container{
  margin: 20rpx;
}
.about-title,.about-content{
  padding-bottom: 10rpx;
}
.about-title{
  margin-left: 0.5rem;
  /* text-decoration: underline; */
}
.about-main-title{
  height: 70rpx;
}
.about-content{
  text-indent: 2em;
  font-size: 0.8em;
  opacity: 0.8;
}

.support{
  display: flex;
  align-items: center;
  flex-direction: column;
}

.admire-developer,.developer-wx,.support-me{
  margin: 20rpx;
  padding: 10rpx 20rpx;
  border: 2rpx solid yellow;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 5%;
  color: #09bb07;
  box-shadow:  0 0 10rpx #888888;
  font-size: 28rpx;
}