/**app.wxss**/
page{
  background-color: #2c2c2c;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 50rpx 0;
  box-sizing: border-box;
} 
/* 植物识别 */
.page-card{
  background-color: #FCFCFC;
  border-radius: 20rpx;
}
.page-card>image{
  border-radius: 20rpx 20rpx 0 0;
}

.card-result{
  width: 100%;
  height: 100%;
  position: relative;
}
.card-logo{
  position: absolute;
  width:80rpx;
  height:80rpx;
  top:-50rpx;
  left:41%
}
.card-content{
  padding: 50rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 识别结果 */
.content-result{
  margin-bottom: 50rpx;
}

.result{
  display: flex;
  box-sizing: border-box;
  width: 100%;
  margin: 20rpx 0;
  align-items:center;
}
.result>view{
  text-align: center;
  font-size: 0.8em;
}
.result-title{
  width: 35%;
  display: table-cell;
  vertical-align: middle;
}
.result-progress{
  width: 35%;
  padding: 0 10rpx;
}
.result-num{
  width: 30%;
}
.result .f-size{
  font-size: 26rpx;
}


/* 生成图片分享 */
.share{
  padding: 10rpx 20rpx;
  border: 2rpx solid yellow;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 5%;
  color: #09bb07;
  box-shadow:  0 0 10rpx #888888;
  margin:50rpx 0 20rpx;
  font-size:32rpx;
  line-height:32rpx;
}

.share-bottom{
  width: 750rpx;
  height: 50rpx;
}

/* 展示效果 */
.show-canvas{
  display: none;
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.share-canvas{
  display: block;
}

.canvas-card{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  height:100%;
  width: 100%;
  position: fixed;
  top: 0;
}
.card-text{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.canvas-card text{
  font-size: 22rpx;
  color: #FCFCFC;
  opacity: 0.8;
}
.card-btn{
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
 .card-btn>view{
  width: 70rpx;
  height: 70rpx;
  padding: 10rpx;
  border: 2rpx solid yellow;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  color: #09bb07;
  box-shadow:  0 0 10rpx #888888;
  margin:0 50rpx 20rpx;
  text-align:center;
  font-size:26rpx;
  line-height:70rpx
} 

/* 通用按钮 */
.common-btn{
  padding: 10rpx 20rpx;
  border: 2rpx solid yellow;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 5%;
  color: #09bb07;
  box-shadow:  0 0 10rpx #888888;
  margin:0 20rpx 20rpx;
  text-align:center;
  font-size:32rpx;
  line-height:32rpx
}